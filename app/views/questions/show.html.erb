<h1><%= @question.title %></h1>
<time datetime="<%= @question.created_at %>">
  <%= @question.created_at %>
</time>
<p><%= @question.body %></p>

<h2>Answers:</h2>

<div class="answers">
  <%= render 'answers' %>
</div>

<%= form_for [ @question, @answer ], remote: true do |f| %>
  <%= f.label :body, 'Your answer' %>
  <%= f.text_area :body%>
  <%= f.submit "Submit answer!"%>
<% end %>