<h1><%= @question.title %></h1>
<time datetime="<%= @question.created_at %>">
  <%= @question.created_at %>
</time>
<p><%= @question.body %></p>

<h2>Answers:</h2>

<div class="answers">
  <% @answers.each do |answer| %>
    <time datetime="<%= answer.created_at %>">
      <%= answer.created_at %>
    </time>
    <p><%= answer.body %></p>
  <% end %>
</div>

<%= form_with model: [ @question, @answer ] do |f| %>
  <%= f.label :body, 'Your answer' %>
  <%= f.text_area :body%>
  <%= f.submit "Submit answer!"%>
<% end %>